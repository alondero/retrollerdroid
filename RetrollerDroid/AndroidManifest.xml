<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.londero.retrollerdroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
	  	android:theme="@android:style/Theme.Holo">
        <activity
            android:name="org.londero.retrollerdroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.londero.retrollerdroid.controllers.HyperSpinActivity"
            android:label="@string/title_activity_hyper_spin" 
            android:parentActivityName="org.londero.retrollerdroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.londero.retrollerdroid.MainActivity" />>
        </activity>
        <activity
            android:name="org.londero.retrollerdroid.controllers.VisualBoyAdvanceActivity"
            android:label="@string/title_activity_visual_boy_advance"
            android:parentActivityName="org.londero.retrollerdroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.londero.retrollerdroid.MainActivity" />
        </activity>
        <activity
            android:name="org.londero.retrollerdroid.controllers.DolphinActivity"
            android:label="@string/title_activity_dolphin"
            android:parentActivityName="org.londero.retrollerdroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.londero.retrollerdroid.MainActivity" />
        </activity>
        <activity
            android:name="org.londero.retrollerdroid.controllers.Pcsx2Activity"
            android:label="@string/title_activity_pcsx2"
            android:parentActivityName="org.londero.retrollerdroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.londero.retrollerdroid.MainActivity" />
        </activity>
    </application>

</manifest>
